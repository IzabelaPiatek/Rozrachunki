<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/rellay1"
    android:gravity="center"
    tools:context=".CreateGroupActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grupa"
            android:textColor="@color/blue2"
            android:textSize="13sp"
            android:background="#1111"
            android:textAlignment="center"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view_choose_image1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_choose_image" />


            <EditText
                android:id="@+id/username_ET_fill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:hint="//wypelnic nazwą grupy"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/image_view_choose_image1"
                android:textSize="18sp" />
            <Button
                android:id="@+id/change_imageBTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="45dp"
                android:layout_below="@+id/username_ET_fill"
                android:layout_toRightOf="@id/image_view_choose_image1"
                android:text="Zmień zdjęcie grupy" />



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/radio_selector"
                    android:button="@color/transparent"
                    android:elevation="4dp"
                    android:padding="16dp"
                    android:text="Zakupy"
                    android:textColor="@drawable/text_color" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/radio_selector"
                    android:button="@color/transparent"
                    android:elevation="4dp"
                    android:padding="16dp"
                    android:text="Wypad na miasto"
                    android:textColor="@drawable/text_color" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/radio_selector"
                    android:button="@color/transparent"
                    android:elevation="4dp"
                    android:padding="16dp"
                    android:text="Inne"
                    android:textColor="@drawable/text_color" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Członkowie grupy:"
                android:textColor="@color/blue2"
                android:textSize="13sp"
                android:background="#1111"
                android:textAlignment="center"
                android:gravity="center"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/LV_add_member_to_group" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>