<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/group_listview"
        android:src="@drawable/ic_baseline_monetization"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/TextView_group"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/group_listview"
        android:layout_marginLeft="20sp"
        android:text="lalalalalalla"
        android:padding="5dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/keyboard_arrow_right"
        android:layout_marginRight="10sp"
        />
</RelativeLayout>